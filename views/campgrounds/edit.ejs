<% layout('./layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Update Campground</h1>
  <div class="col-md-6 offset-md-3 col-10 offset-1">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="validated-form" enctype="multipart/form-data" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
        <div class="invalid-feedback">
          <small>Please type in a title for your campground.</small>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
        <div class="invalid-feedback">
          <small>Please provide a valid location.</small>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" id="price" name="campground[price]" class="form-control"
            placeholder="0.00" aria-label="price" aria-describedby="price-label" value="<%= campground.price %>" required>
          <div class="invalid-feedback">
            <small>Please provide the price per night for the campground.</small>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description"
          name="campground[description]" required><%= campground.description %></textarea>
        <div class="invalid-feedback">
          <small>Please describe your campground briefly.</small>
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Add Image(s)</label>
        <input class="form-control" type="file" id="image" name="image" multiple>
      </div>

      <div class="row">
        <% campground.images.forEach((img, i) => { %>
          <div class="wrapper col-lg-4 col-6 mb-3">
            <div class="card">
              <img src="<%= img.thumbnail %>" class="card-img-top" alt="<%= img.filename %>">
              <div class="card-body d-flex align-items-center gap-2">
                <input class="form-check-input mt-0" type="checkbox" value="<%= img.filename %>" id="image-<%= i %>" name="deleteImages[]">
                <label class="form-check-label text-danger" for="image-<%= i %>">Delete?</label>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-primary">Update Campground</button>
      </div>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
  </div>
</div>