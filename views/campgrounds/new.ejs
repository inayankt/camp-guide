<% layout('./layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Register new Campground</h1>
  <div class="col-md-6 offset-md-3 col-10 offset-1">
    <form action="/campgrounds" method="post" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="campground[title]" required> 
        <div class="invalid-feedback">
          Please type in a title for your campground.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]" required>
        <div class="invalid-feedback">
          Please provide a valid location.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" id="price" name="campground[price]" class="form-control"
            placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
          <div class="invalid-feedback">
            Please provide the price per night for the campground.
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="text" id="image" name="campground[image]" required>
        <div class="invalid-feedback">
          Please provide link to image of the campground.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
        <div class="invalid-feedback">
          Please describe your campground briefly.
        </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-primary">Register Campground</button>
      </div>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
