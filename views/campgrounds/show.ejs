<% layout('./layouts/boilerplate') %>

<div class="row">
  <div class="col-md-8 offset-md-2 col-10 offset-1">
    <div class="card mb-3">
      <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %>">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location %></li>
        <li class="list-group-item">$ <%= campground.price %> / night</li>
      </ul>
      <div class="card-body">
        <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
        <form class="d-inline" action="/campground/<%= campground._id %>?_method=DELETE" method="post">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer">
        <a href="/campgrounds">All Campgrounds</a>
      </div>
    </div>
  </div>
</div>
